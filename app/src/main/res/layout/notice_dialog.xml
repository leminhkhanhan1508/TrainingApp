<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dp300"
    android:background="@drawable/bg_while_corners_12"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNoticeDlgLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp24"
        android:src="@drawable/baseline_notifications_24"
        />
    <com.training.base.ui.views.TextView
        android:id="@+id/tvNoticeDlgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp18"
        android:textStyle="normal"
        android:textSize="18sp"
        android:lineSpacingExtra="10sp"
        android:gravity="center_horizontal"
        android:text="@string/noti_popup"
        app:cusfont="Medium"
        />

    <com.training.base.ui.views.TextView
        android:id="@+id/tvNoticeDlgContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginHorizontal="@dimen/dp20"
        android:textSize="@dimen/sp16"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        tools:text="Nội dung thông báo nề"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp27"
        android:layout_marginBottom="@dimen/dp16">

        <com.training.base.ui.views.Button
            android:id="@+id/btnNoticeDlgLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp6"
            android:layout_weight="1"
            android:text="@string/label_close"
            android:background="@drawable/bg_cancel_button"
            android:textColor="@color/color_005d98"
            android:textAllCaps="false"
            android:textSize="@dimen/sp16"
            app:cusfont="Bold"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.training.base.ui.views.Button
            android:id="@+id/btnNoticeDlgRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp6"
            android:layout_weight="1"
            android:text="@string/continues"
            android:background="@drawable/bg_main_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            app:cusfont="Bold"
            />
    </LinearLayout>
</LinearLayout>